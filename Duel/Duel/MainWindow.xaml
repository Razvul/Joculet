<Window x:Class="Duel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Duel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label
            x:Name="Label_CLass"
            Content="Choose a class"
            Grid.Row="1"
            Grid.Column="0"
            Width="120"
            Height="25"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"/>
        <ComboBox
            x:Name="ComboBox_Class"
            DisplayMemberPath="Name"
            Grid.Column="0"
            Grid.Row="1"
            Width="120"
            Height="25"/>

        <Label
            x:Name="Label_Weapon"
            Content="Choose a weapon"
            Grid.Column="0"
            Grid.Row="2"
            Margin="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"/>
        <ComboBox
            x:Name="ComboBox_Weapon"
            DisplayMemberPath="WeaponName"
            Grid.Column="0"
            Grid.Row="2"
            Width="120"
            Height="25"/>

        <Button
            x:Name="Button_StartFight"
            Content="Start Fight"
            Grid.Column="1"
            Grid.Row="0"
            Width="120"
            Height="25"/>

        <ListBox
            x:Name="ListBox_DamageOutput"
            Grid.Row="1"
            Grid.Column="1"
            Grid.RowSpan="2"
            Width="120"/>
        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">

            <Button
            x:Name="Button_Strike"
            Content="Strike"
            Width="120"
            Height="25"/>

            <Button
            x:Name="Button_Skill"
            Content="Special Skill"
            Width="120"
            Height="25"/>
        </StackPanel>

        <StackPanel
            Grid.Column="1"
            Grid.Row="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Top">
            <Button
                x:Name="Button_Wait"
                Content="Wait Oponent"
                Width="120"
                Height="25"/>
        </StackPanel>

        <Label
            x:Name="Label_Rezultat"
            Content="Rezultat"
            Grid.Column="1"
            Grid.Row="3"
            HorizontalContentAlignment="Center"/>
    </Grid>
</Window>